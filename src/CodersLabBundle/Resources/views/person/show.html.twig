{% extends 'CodersLabBundle::base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ person.surname }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ person.description }}</td>
            </tr>
            <tr>
                <th>Address</th>
                {% if person.email is not null %}
                <td>{{ person.address }}</td>
                <td><p><button><a href="{{ path('address_edit', {'id' : person.address.id}) }}">Edit address</a></button></p></td>
                {% else %}
                    No address was defined.
                {% endif %}
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ person.email }}</td>
                {% if person.email is not null %}
                <td><p><button><a href="{{ path('email_edit', {'id' : person.email.id}) }}">Edit e-mail</a></button></p></td>
                {% else %}
                No e-mail was defined.
                {% endif %}
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>{{ person.personsPhoneNumber }}</td>
                {% if person.email is not null %}
                <td><p><button><a href="{{ path('phonenumber_edit', {'id' : person.personsPhoneNumber.id}) }}">Edit e-mail</a></button></p></td>
                {% else %}
                    No e-phone number was defined.
                {% endif %}
            </tr>
        </tbody>
    </table>


            <p><button><a href="{{ path('person_index') }}">Back to the contact list</a></button></p>

            <p><button><a href="{{ path('person_edit', { 'id': person.id }) }}">Edit</a></button></p>

            {{ form_start(delete_form) }}
                <p><input type="submit" value="Delete"></p>
            {{ form_end(delete_form) }}

{% endblock %}
