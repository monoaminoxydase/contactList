{% extends 'CodersLabBundle::base.html.twig' %}

{% block body %}
    <h1>Addresses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Street</th>
                <th>House number</th>
                <th>Appartment xnumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td><a href="{{ path('address_show', { 'id': address.id }) }}">{{ address.id }}</a></td>
                <td>{{ address.city }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.houseNumber }}</td>
                <td>{{ address.appartmentNumber }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('address_show', { 'id': address.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('address_edit', { 'id': address.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('address_new') }}">Create a new address</a>
        </li>
        <li>
            <p><button><a href="{{ path('person_index') }}">Back to the contact list</a></button></p>
        </li>
    </ul>
{% endblock %}
